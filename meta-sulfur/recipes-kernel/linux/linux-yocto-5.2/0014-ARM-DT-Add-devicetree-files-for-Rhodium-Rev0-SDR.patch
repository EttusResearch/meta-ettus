new file mode 100644
index 000000000000..194e9edbb095
--- /dev/null
+++ b/arch/arm/boot/dts/ni-rhodium-rev0-thermal.dts
@@ -0,0 +1,176 @@
+/*
+ * National Instruments Ettus Research Project Rhodium SDR
+ *
+ * Copyright (c) 2018 National Instruments Corp.
+ *
+ * SPDX-License-Identifier: (GPL-2.0 OR X11)
+ */
+
+&usrpio_i2c0 {
+	db_temp0: hwmon@48 {
+		reg = <0x48>;
+		compatible = "lm75";
+		#thermal-sensor-cells = <1>;
+	};
+
+	gpio@20 {
+		compatible = "ti,tca6408";
+		reg = <0x20>;
+		gpio-controller;
+		#gpio-cells = <2>;
+	};
+
+};
+
+&usrpio_i2c1 {
+	db_temp1: hwmon@48 {
+		reg = <0x48>;
+		compatible = "lm75";
+		#thermal-sensor-cells = <1>;
+	};
+
+	gpio@20 {
+		compatible = "ti,tca6408";
+		reg = <0x20>;
+		gpio-controller;
+		#gpio-cells = <2>;
+	};
+};
+
+&fan0 {
+	cooling-min-state = <3300>;
+	cooling-max-state = <13500>;
+};
+
+&fan1 {
+	cooling-min-state = <3300>;
+	cooling-max-state = <13500>;
+};
+
+&thermal_zones {
+	rhodium-db0-zone {
+		polling-delay-passive = <1000>;
+		polling-delay = <1000>;
+
+		thermal-sensors = <&db_temp0 0>;
+
+		trips  {
+			db0_alert0: db0-alert0 {
+				temperature = <30000>; /* millicelsius */
+				hysteresis = <2000>;   /* millicelsius */
+				type = "active";
+			};
+
+			db0_alert1: db0-alert1 {
+				temperature = <45000>; /* millicelsius */
+				hysteresis = <2000>;   /* millicelsius */
+				type = "active";
+			};
+
+			db0_alert2: db0-alert2 {
+				temperature = <50000>; /* millicelsius */
+				hysteresis = <2000>;    /* millicelsius */
+				type = "active";
+			};
+
+
+			db0_crit: db0-crit {
+				temperature = <85000>; /* millicelsius */
+				hysteresis = <2000>;    /* millicelsius */
+				type = "critical";
+			};
+
+		};
+
+		cooling-maps {
+			map0 {
+				trip = <&db0_alert0>;
+				cooling-device = <&fan1 THERMAL_NO_LIMIT 6000>;
+				contribution = <100>;
+			};
+
+			map1 {
+				trip = <&db0_alert1>;
+				cooling-device = <&fan1 6000 8000>;
+				contribution = <100>;
+			};
+
+			map2 {
+				trip = <&db0_alert2>;
+				cooling-device = <&fan1 8000 12500>;
+				contribution = <100>;
+			};
+
+			map3 {
+				trip = <&db0_crit>;
+				cooling-device = <&fan1 12500 13500>;
+				contribution = <100>;
+			};
+
+		};
+	};
+
+	rhodium-db1-zone {
+		polling-delay-passive = <1000>;
+		polling-delay = <1000>;
+
+		thermal-sensors = <&db_temp1 0>;
+
+		trips  {
+			db1_alert0: db1-alert0 {
+				temperature = <30000>; /* millicelsius */
+				hysteresis = <2000>;   /* millicelsius */
+				type = "active";
+			};
+
+			db1_alert1: db1-alert1 {
+				temperature = <45000>; /* millicelsius */
+				hysteresis = <2000>;   /* millicelsius */
+				type = "active";
+			};
+
+			db1_alert2: db1-alert2 {
+				temperature = <50000>; /* millicelsius */
+				hysteresis = <2000>;    /* millicelsius */
+				type = "active";
+			};
+
+
+			db1_crit: db1-crit {
+				temperature = <85000>; /* millicelsius */
+				hysteresis = <2000>;    /* millicelsius */
+				type = "critical";
+			};
+
+		};
+
+		cooling-maps {
+			map0 {
+				trip = <&db1_alert0>;
+				cooling-device = <&fan1 THERMAL_NO_LIMIT 6000>;
+				contribution = <100>;
+			};
+
+			map1 {
+				trip = <&db1_alert1>;
+				cooling-device = <&fan1 6000 8000>;
+				contribution = <100>;
+			};
+
+			map2 {
+				trip = <&db1_alert2>;
+				cooling-device = <&fan1 8000 12500>;
+				contribution = <100>;
+			};
+
+			map3 {
+				trip = <&db1_crit>;
+				cooling-device = <&fan1 12500 13500>;
+				contribution = <100>;
+			};
+
+		};
+	};
+
+
+};
