+/*
+ * NI Ettus Research Neon EEPROM helpers
+ *
+ * Copyright (c) 2017 National Instruments Corp
+ *
+ * SPDX-License-Identifier:	GPL-2.0+
+ */
+
+#ifndef NI_ZYNQ_E31X_EEPROM_H
+#define NI_ZYNQ_E31X_EEPROM_H
+
+#define ETH_ALEN 6
+
+/**
+ * e31x_mboard_eeprom - The memory map of the USRP E31x SDR EEPROM
+ *
+ * @version_major: Data layout version major
+ * @version_minor: Data layout version minor
+ * @pid: Product Identifier
+ * @rev: Revision Number (zero based)
+ * @eth_addr0: Contains ethernet address for eth0
+ * @serial: (Non zero terminated) String containing the serial number
+ * @__pad1: Padding
+ * @user_name: User name that user can use to store custom name
+ */
+struct e31x_mboard_eeprom {
+	u16 version_major;
+	u16 version_minor;
+	char eth_addr0[ETH_ALEN];
+	u16 pid;
+	u16 rev;
+	char serial[8];
+	u8 __pad_1[20-8];
+	char user_name[32];
+} __attribute__((packed));
+
+int e31x_probe_mboard(void);
+int e31x_read_ethaddr(unsigned char *ethaddr, int which);
+
+#endif /* NI_ZYNQ_E31X_EEPROM_H */
