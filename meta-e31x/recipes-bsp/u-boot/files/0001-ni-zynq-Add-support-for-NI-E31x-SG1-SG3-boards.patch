@@ -0,0 +1,125 @@
+/*
+ * (C) Copyright 2017 National Instruments Corp
+ *
+ * SPDX-License-Identifier:	GPL-2.0+
+ */
+
+#include <common.h>
+#include "e31x-eeprom.h"
+#include <dm.h>
+#include <i2c.h>
+
+DECLARE_GLOBAL_DATA_PTR;
+
+struct e31x_xboard_match {
+	u16 pid;
+	const char *name;
+	const char *dtb;
+};
+
+static const struct e31x_xboard_match mb_match[] = {
+	{ .pid = 0x77d1, .name = "E31x SG1", .dtb = "e31x-sg1" },
+	{ .pid = 0x77d2, .name = "E31x SG1", .dtb = "e31x-sg1" },
+	{ .pid = 0x77d3, .name = "E31x SG3", .dtb = "e31x-sg3" },
+	{},
+};
+
+static const char *e31x_get_mboard_name(u16 pid)
+{
+	int i;
+
+	for (i = 0; i < ARRAY_SIZE(mb_match); i++)
+		if (pid == mb_match[i].pid)
+			return mb_match[i].name;
+
+	return "Unknown";
+}
+
+static const char *e31x_get_mboard_dtb(u16 pid)
+{
+	int i;
+
+	for (i = 0; i < ARRAY_SIZE(mb_match); i++)
+		if (pid == mb_match[i].pid)
+			return mb_match[i].dtb;
+
+	return "unsupported";
+}
+
+static int e31x_match(u16 pid)
+{
+	int i;
+
+	for (i = 0; i < ARRAY_SIZE(mb_match); i++) {
+		if (pid == mb_match[i].pid)
+			return 0;
+	}
+
+	return -ENOTSUPP;
+}
+
+int e31x_probe_mboard(void)
+{
+	struct udevice *i2c_tun, *eeprom_chip;
+	struct e31x_mboard_eeprom eeprom;
+	char base_fdt[128];
+	int err, i;
+
+	err = uclass_get_device_by_seq(UCLASS_I2C, 0, &i2c_tun);
+	if (err < 0)
+		return err;
+
+	err = dm_i2c_probe(i2c_tun, 0x51, 0, &eeprom_chip);
+	if (err < 0)
+		return err;
+
+	for (i = 0; i < sizeof(eeprom); i++) {
+		err = dm_i2c_reg_read(eeprom_chip, i);
+		if (err < 0)
+			break;
+		*(((u8*)(&eeprom)) + i) = err & 0xff;
+	}
+
+	err = e31x_match(htons(eeprom.pid));
+	if (err)
+		return err;
+
+	/* store mboard in environment, not e31x_get_mboard_dtb defaults to 'e31x' */
+	snprintf(base_fdt, 128, "%s", e31x_get_mboard_dtb(htons(eeprom.pid)));
+	env_set("mboard", base_fdt);
+
+	printf("NI Ettus Research  %s SDR Rev %c s/n %s \n",
+			e31x_get_mboard_name(htons(eeprom.pid)),
+			'A' + htons(eeprom.rev),
+			eeprom.serial);
+	return htons(eeprom.rev);
+}
+
+int e31x_read_ethaddr(unsigned char *ethaddr, int which)
+{
+	struct udevice *i2c_tun, *eeprom_chip;
+	struct e31x_mboard_eeprom eeprom;
+	int err, i;
+
+	err = uclass_get_device_by_seq(UCLASS_I2C, 0, &i2c_tun);
+	if (err < 0)
+		return err;
+
+	err = dm_i2c_probe(i2c_tun, 0x51, 0, &eeprom_chip);
+	if (err < 0)
+		return err;
+
+	for (i = 0; i < sizeof(eeprom); i++) {
+		err = dm_i2c_reg_read(eeprom_chip, i);
+		if (err < 0)
+			break;
+		*(((u8*)(&eeprom)) + i) = err & 0xff;
+	}
+
+	if (which == 0)
+		memcpy(ethaddr, &eeprom.eth_addr0, ETH_ALEN);
+	else
+		return -EINVAL;
+
+	return 0;
+}
